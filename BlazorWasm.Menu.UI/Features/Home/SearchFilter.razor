@inject NavigationManager _navigationManager


<div class="container m-1 p-1 mb-3 mt-1">
	<p class="text-body">Enter The Maximum Prepration Time In Minutes</p>
	<input type="text" class="form-control" @bind="@MaxTime" />
	<div class=" mt-3 g-3 mb-2">
		<button class="btn btn-primary" @onclick="Search">Search</button>
		<button class="btn btn-outline-warning" @onclick="Clear">Clear</button>
	</div>

	<p class="text-body-emphasis @_displayClass">Recipes With Maximum Prepration Time Of @MaxTime : </p>
</div>


@code {

	[Parameter]
	public string SearchText { get; set; }

	public int MaxTime { get; set; } = 0;

	string _displayClass = "d-none";

	void Search()
	{
		_displayClass = "d-block";
		_navigationManager.NavigateTo($"/search/{SearchText}/maxTime/{MaxTime}");
	}

	void Clear()
	{
		MaxTime = 0;
		_displayClass = "d-none";
		_navigationManager.NavigateTo($"/search/{SearchText}");
	}
}
